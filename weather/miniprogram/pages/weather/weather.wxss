.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding-top: 16rpx;
}

.location {
  font-size: 24px;
  font-weight: bold;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}

.realtime-info {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.realtime-temp {
  font-size: 100px;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}

.realtime-degree {
  font-size: 50px;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}

.info1 {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.realtime-weather {
  font-size: 20px;
  margin-right: 8rpx;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}

.pm25-aqi {
  font-size: 20px;
  margin-right: 8rpx;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}

.info2 {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 16rpx;
}

.realtime-wD {
  font-size: 18px;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}

.realtime-wS {
  font-size: 18px;
  margin-right: 8rpx;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}

.realtime-sD {
  font-size: 18px;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}

.wrapper {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-top: 16rpx;
}

.today-item {
  width: 50%;
  height: 100rpx;
  border: 1px solid #cccccc;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.today-item-title {
  font-size: 20px;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}

.today-item-weather {
  font-size: 20px;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}

.tomorrow-item {
  width: 50%;
  height: 100rpx;
  border: 1px solid #cccccc;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tomorrow-item-title {
  font-size: 20px;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}

.tomorrow-item-weather {
  font-size: 20px;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}

.weather-hourly-title {
  width: 100%;
  font-size: 24px;
  font-weight: bold;
  padding: 20rpx 0 0 20rpx;
  text-align: left;
  box-sizing: border-box;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}

.weather-hourly-list {
  white-space: nowrap;
}

.weather-hourly-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
  box-sizing: border-box;
}

.weather-hourly-time {
  font-size: 20px;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}

.weather-hourly-weather {
  font-size: 20px;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}

.weather-hourly-temp {
  font-size: 20px;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}

.weather-day-title {
  width: 100%;
  font-size: 24px;
  font-weight: bold;
  padding: 20rpx 0 0 20rpx;
  text-align: left;
  box-sizing: border-box;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}

.weather-day-item {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.weather-day-date {
  display: inline-block;
  text-align: left;
  font-size: 20px;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}

.weather-day-weather {
  display: inline-block;
  text-align: center;
  flex: 1;
  font-size: 20px;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}

.weather-day-temp {
  display: inline-block;
  text-align: right;
  font-size: 20px;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}

image {
  position: absolute;
  left: 0;
  bottom: 0;
  display: block;
  width: 100%;
  height: 100%;
  z-index: -999;
  object-fit: cover;
}

.sunset {
  width: 100%;
  font-size: 24px;
  font-weight: bold;
  padding: 20rpx 0 0 20rpx;
  text-align: left;
  box-sizing: border-box;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}

.sundown,
.sunrise {
  width: 100%;
  font-size: 16px;
  padding-left: 10rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  color: #ffffff;
  text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
}
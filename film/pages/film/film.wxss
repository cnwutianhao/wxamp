/**film.wxss（用于编写页面的样式）**/
.container {
  padding: 16rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.film {
  display: flex;
  margin-bottom: 16rpx;
  align-items: flex-start;
}

.poster {
  width: 225rpx;
  height: 318rpx;
  margin-right: 16rpx;
}

.info {
  flex: 1;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.score {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.coming {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.show {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.actor {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}